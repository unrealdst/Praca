@model WebApplication1.Models.CreateProjectViewModel

@{
    ViewBag.Title = CreateProject.Title;
}

<h2><i class="fa fa-plus icon" aria-hidden="true"></i> @CreateProject.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-3">
                <div class="panel panel-default input-panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">@CreateProject.Name</h3>
                    </div>
                    <div class="panel-body ">
                        @Html.EditorFor(model => model.ProjectName, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.ProjectName, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default input-panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">@CreateProject.Client</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DropDownListFor(m => m.Clients,new SelectList(Model.Clients,"Id", "Name"),new {@class="selectpicker" })
                        @Html.ValidationMessageFor(model => model.ProjectName, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default input-panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">@CreateProject.Manager</h3>
                    </div>
                    <div class="panel-body ">
                        @Html.DropDownListFor(m => m.ProjectOwners, new SelectList(Model.ProjectOwners, "Id", "Name"), new { @class = "selectpicker" })
                        @Html.ValidationMessageFor(model => model.ProjectOwners, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="btn-group" role="group">
                <button type="submit" class="btn btn-default">@Navigation.Create</button>
                <button type="button" class="btn btn-default">@Html.ActionLink(Navigation.Cancel, "ProjectsList", "ProjectLists")</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
