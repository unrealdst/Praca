@model WebApplication1.Models.CreateTaskViewModel

@{
    ViewBag.Title = "ToDOlejter";
}

<h2><i class="fa fa-plus icon" aria-hidden="true"></i> "ToDOlejter"</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-3">
                <div class="panel panel-default input-panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Tytuł</h3>
                    </div>
                    <div class="panel-body ">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Projects, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default input-panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Projekty</h3>
                    </div>
                    <div class="panel-body">
                        @Html.DropDownListFor(m => m.Projects, new SelectList(Model.Projects, "Id", "Value"), new { @class = "selectpicker" })
                        @Html.ValidationMessageFor(model => model.Projects, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default input-panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Przypnij</h3>
                    </div>
                    <div class="panel-body ">
                        @Html.DropDownListFor(m => m.Users, new SelectList(Model.Users, "Id", "Value"), new { @class = "selectpicker" })
                        @Html.ValidationMessageFor(model => model.Users, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default input-panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Opis</h3>
                    </div>
                    <div class="panel-body ">
                        @Html.TextAreaFor(model => model.Description,10,50, new { htmlAttributes = new { @class = "form-control", @cols=10 } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="btn-group" role="group">
                <button type="submit" class="btn btn-default">@Navigation.Create</button>
                <button type="button" class="btn btn-default">@Html.ActionLink(Navigation.Cancel, "ProjectsList", "ProjectLists")</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
